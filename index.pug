        //-     each val in [1,2,3,4]
        //-         img.default-margin(src="https://via.placeholder.com/150x150")
        section#contact.duo
            div.intouchtext.flex.vertical
                h1 Newsletter
                a.action.solid(href="https://facebook.us15.list-manage.com/subscribe?u=c7b34cca67c5aa62532130cbe&id=e5040d3cd0" target="_blank" rel="noopener") Subscribe
                h1 Get in touch
                a.action.outline.question(href="https://www.facebook.com/UofT.MIST/" target="_blank" rel="noopener") GOT A QUESTION?
            img(src="assets/betty.jpg")
        include common/footer.pug