mixin links
    nav.links
        a(href="#event") Events
        a(href="#about") About Us
        a(href="#contact") Contact
style
    include topbar.css
.hamburgerexpanded
    input#menuopen(type="checkbox" hidden)
    label.hamburger(for="menuopen")
        i.fas.fa-bars.open
        i.fas.fa-times.close
    label.clickaway(for="menuopen")
    +links
header
    a#logolink(href="/" target="_blank" rel="noopener")
        img(src="Logo/SVG/White Brain.svg")
        h2 UTMIST
    //- TODO: show hamburger when in small screen
    +links
    